{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./public/",
    "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["es2015", "dom"],
    "paths": {
      "@utils/*": ["src/js/utils/*"],
      "@styles/*": ["src/css/*"],
      "@img/*": ["src/img/*"],
      "@types": ["src/js/types"]
    }
  },
  "include": ["src/**/*"]
}
